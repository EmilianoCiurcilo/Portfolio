---
import Layout from "../layouts/Layout.astro"

import AboutMe from "../components/AboutMe.astro"
import CodeIcon from "../components/icons/Code.astro"
import Profile from "../components/icons/Profile.astro"
import Projects from "../components/Projects.astro"
import SectionContainer from "../components/SectionContainer.astro"
import Hero from "../components/Hero.astro"
import TitleSection from "../components/TitleSection.astro"
---

<Layout
  title="Emiliano Ciurcilo - Desarrollador Web MERN Stack - Portfolio"
  description="Soy un programador web que crea aplicaciones con tecnologías como MongoDb, ExpressJS, ReactJS y NodeJS . Conoce mis proyectos y sobre mí."
>
  <main class="px-4">
    <SectionContainer class="py-16 md:py-36">
      <Hero>
      </slot>
    </Hero>
    </SectionContainer>
    <div class="space-y-24">

    <SectionContainer id="proyectos">
      <TitleSection>
        <CodeIcon class="size-7" />
        Proyectos
      </TitleSection>
      <Projects />
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <TitleSection>
        <Profile class="size-8" />
        Sobre mí
      </TitleSection>
      <AboutMe />
    </SectionContainer>
  </div>
  </main>
</Layout>
